<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#33000000"/> <!-- Semi-transparent black -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main background -->
    <item>
        <shape>
            <solid android:color="@color/pastel_blue"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
